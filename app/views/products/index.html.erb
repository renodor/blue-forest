<div class="product-grid-container">
  <div class="container">
    <div class="products">
      <% @products.each do |product| %>
        <% if product.product_variations.length > 0 %>
          <div class="product">
            <%= cl_image_tag product.main_photo.key, height: 400, crop: :fill %>
            <div class="product-grid-info-container">
              <%= image_tag 'symbol.svg' %>
              <div class="product-grid-info">
                <span class="grow-1"><%= product.name.upcase %></span>
                <!-- <span>$ --> <%#= product.product_variations.first.price %> <!--</span> -->
                <%= link_to product_path(product), class: 'simple-flexbox' do %>
                  <div>
                    <h3><%= product.name.upcase %></h3>
                    <p><%= product.description.upcase.truncate(50) %></p>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>

<%= render 'shared/carousel_doctors' %>


