<div class="container">
  <p><%= @product.name %></p>
  <p>$<%= @product.price %></p>
  <p><%= @product.description %></p>
  <br>
  <p>
  <%= form_tag line_items_path, method: :post, class: ""  do %>
      <%= select_tag 'color_id', options_from_collection_for_select(@product_variations[:colors], "id", "value") %>
      <%= select_tag 'size_id', options_from_collection_for_select(@product_variations[:sizes], "id", "value") %>
      <%= hidden_field_tag 'product_id', @product.id %>
      <%= button_tag(type: "submit", class: "btn btn-flat") do %>
        add to cart
      <% end %>
  <% end %>
</div>


