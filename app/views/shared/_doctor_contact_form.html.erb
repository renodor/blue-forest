<!-- Modal -->
<div class="modal fade" id="contactFormDoctor" tabindex="-1" role="dialog" aria-labelledby="contactFormDoctorLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="contactFormDoctorLabel">Contacto</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= form_tag doctor_contact_form_path do %>
          <div class="form-group">
            <div class="row">
              <div class="col">
                <%= text_field_tag :name, nil, placeholder: 'Nombre', class: "form-control"  %>
              </div>
              <div class="col">
                <%= text_field_tag :surname, nil, placeholder: 'Apellido', class: "form-control"  %>
              </div>
            </div>
          </div>
          <div class="form-group">
            <div class="row">
              <div class="col">
                <%= email_field_tag :email, nil, placeholder: 'Email', class: "form-control"  %>
              </div>
              <div class="col">
                <%= phone_field_tag :phone, nil, placeholder: 'Teléfono', class: "form-control"  %>
              </div>
            </div>
          </div>
          <div class="form-group">
            <div class="row">
              <div class="col">
                <%= text_area_tag :message, nil, placeholder: 'Mensaje', class: "form-control"  %>
              </div>
            </div>
          </div>
          <%= submit_tag 'Envíar', class: 'btn btn-blue small w-100' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
