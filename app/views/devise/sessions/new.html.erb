<div class="login-container container my-5">
  <h2>INGRESA</h2>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" }, label: false %>
      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password" }, label: false %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "INGRESA", class: 'btn btn-blue w-100' %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>

</div>
